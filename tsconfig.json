{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "ES2022",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/preload.mts"],
    "exclude": ["node_modules"]
}
